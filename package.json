{
  "name": "dedic.eu",
  "version": "0.1.0",
  "description": "My personal website",
  "homepage": "https://dedic.eu",
  "bugs": {
    "url": "https://github.com/marekdedic/dedic.eu/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marekdedic/dedic.eu.git"
  },
  "license": "MIT",
  "author": "Marek Dědič",
  "type": "module",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "vite build",
    "postbuild": "npx svelte-sitemap --out-dir dist --domain https://dedic.eu",
    "clean": "rimraf dist/*",
    "lint": "run-p -c --aggregate-output lint:*",
    "lint:eslint": "eslint --color",
    "lint:svelte": "run-p -c --aggregate-output lint:svelte:*",
    "lint:svelte:svelte-check": "FORCE_COLOR=1 svelte-check",
    "lint:ts": "run-p -c --aggregate-output lint:ts:*",
    "lint:ts:typecheck": "tsc  --noEmit",
    "playwright-accept": "npm run playwright-docker-run --command='npx playwright test --update-snapshots'",
    "preplaywright-docker-run": "xauth nlist $DISPLAY | xauth -f \"./xauth-cookie\" nmerge -",
    "playwright-docker-run": "docker run -it --rm --ipc=host --user=$(id -u):$(id -g) -e DISPLAY=$DISPLAY -e XAUTHORITY=/cookie -v /tmp/.X11-unix:/tmp/.X11-unix -v ./xauth-cookie:/cookie -v \"${PWD}:/var/app/\" \"mcr.microsoft.com/playwright:v$(npm run --silent playwright-version)\" /bin/bash -c \"cd /var/app; ${npm_config_command}\"; exit_code=$?; rm -f ./xauth-cookie; exit $exit_code",
    "playwright-interactive": "npm run playwright-docker-run --command='npx playwright test --ui'",
    "playwright-version": "node -e 'console.log(require(\"./package-lock.json\")[\"packages\"][\"node_modules/@playwright/test\"].version)'",
    "prepare": "svelte-kit sync",
    "start": "vite",
    "test": "npm run playwright-docker-run --command='npm run test-native'",
    "test-native": "playwright test"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/json": "^0.13.1",
    "@fontsource/roboto": "^5.2.6",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@playwright/test": "^1.54.2",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/enhanced-img": "^0.8.1",
    "@sveltejs/kit": "^2.23.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@types/node": "^24.3.0",
    "@types/prismjs": "^1.26.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.1",
    "eslint-plugin-package-json": "^0.54.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prefer-arrow-functions": "^3.6",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.11.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prismjs-bibtex": "^2.1.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-htaccess": "^0.11.3",
    "sass": "^1.90.0",
    "svelte": "^5.38.2",
    "svelte-check": "^4.3.1",
    "svelte-fa": "^4.0.4",
    "svelte-sitemap": "^2.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3"
  }
}
